<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/e"
tools:context=".second">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome for registration"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/txt_regform"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/txt_fname"
        android:layout_below="@+id/txt_regform"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/edt_fname"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/txt_fname"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/txt_lname"
        android:layout_below="@+id/txt_fname"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/edt_lname"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/txt_lname"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/edt_fname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email id"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/txt_email"
        android:layout_below="@+id/txt_lname"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/edt_email"
        android:inputType="textEmailAddress"
        android:layout_toRightOf="@+id/txt_email"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/edt_lname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact no."
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/txt_contact"
        android:layout_below="@+id/txt_email"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/edt_contact"
        android:inputType="phone"
        android:layout_toRightOf="@+id/txt_email"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/edt_email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/txt_password"
        android:layout_below="@+id/txt_contact"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/edt_password"
        android:inputType="numberPassword"
        android:layout_toRightOf="@+id/txt_password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="105dp"
        android:layout_below="@+id/edt_contact"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/txt_cpassword"
        android:layout_below="@+id/txt_password"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/edt_cpassword"
        android:inputType="numberPassword"
        android:layout_toRightOf="@+id/txt_cpassword"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/edt_password"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="20dp"
            android:id="@+id/g"
            android:textColor="@android:color/black"
            android:layout_marginTop="305dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="30dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have accepted an aggrement"
            android:id="@+id/ch"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txt_cpassword"
            android:layout_marginTop="70dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ch"/>


